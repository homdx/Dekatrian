#:import C kivy.utils.get_color_from_hex

<TelaInicial>:
    padding: 5          
    BoxLayout:  
        padding: 5    
        orientation: "vertical"  
        canvas:
            Color:            
                rgb: C("#FFFFFF")
            Rectangle:
                size: root.size
                pos: root.pos
        AreaTitulo:  
            size_hint: 1, .1      
        AreaData: 
            size_hint: 1, .08
        BoxLayout:   
            size_hint: 1, .32  
            canvas:
                Color:            
                    rgb: C("#3385ff")
                Rectangle:
                    size: self.size
                    pos: self.pos  
            AreaCalendario: 
        BoxLayout:
            size_hint: 1, .4 

  
    
                                                              